{
  "name": "simplified-stack-blocks",
  "version": "0.1.0",
  "description": "Minimal visual programming library with Scratch-style stack blocks for React",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && vite build --config vite.lib.config.ts",
    "dev": "vite --config vite.example.config.ts --open",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest --run"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "jsdom": "^27.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^3.2.4"
  }
}
